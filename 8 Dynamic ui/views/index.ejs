<%- include('partials/head') %>
</head>
<body class="min-h-screen p-8 font-sans">
  <%- include ('partials/nav') %>
  <main>
  <div class="max-w-4xl mx-auto"></div>
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">
      Welcome to <span class="text-rose-500">Humara Airbnb</span>
    </h1>
    
    <div class="max-w-xl mx-auto mt-8">
      <ol class="list-decimal list-inside space-y-4">
        <% homes.forEach((home, idx) => { %>
          <li class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6 border border-gray-200">
            <span class="text-2xl font-bold text-gray-800"><%= home.houseName %></span>
            <div class="w-16 h-1 bg-gradient-to-r from-rose-500 to-pink-500 mt-2 rounded-full"></div>
          </li>
        <% }) %>
      </ol>
    </div>
  </div>
  </main>
</body>
</html>