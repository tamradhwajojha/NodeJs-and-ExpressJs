<%- include('partials/head', { pageTitle: pageTitle }) %>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center font-sans">
  <%- include('partials/nav') %>
  <div class="bg-white p-8 rounded-xl shadow-2xl w-96 border border-gray-100">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-800 mb-2">Add Your Home</h2>
      <p class="text-gray-600">Share your beautiful space with travelers</p>
    </div>
    
    <form action="/host/add-home" method="POST" class="space-y-6">
      <div class="space-y-2">
        <label class="block text-sm font-medium text-gray-700">House Name</label>
        <input 
          type="text"
          name="houseName" 
          placeholder="Enter the name of your house"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400"
          required>
      </div>
      
      <div class="space-y-2">
        <label class="block text-sm font-medium text-gray-700">Daily Rent</label>
        <input 
          type="number"
          name="price" 
          placeholder="Enter daily rent amount"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400"
          required>
      </div>
      
      <div class="space-y-2">
        <label class="block text-sm font-medium text-gray-700">Location</label>
        <input 
          type="text"
          name="location" 
          placeholder="Where is your house located?"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400"
          required>
      </div>
      
      <div class="space-y-2">
        <label class="block text-sm font-medium text-gray-700">Rating</label>
        <input 
          type="number"
          name="rating" 
          placeholder="House rating (1-5)"
          min="1"
          max="5"
          step="0.1"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400"
          required>
      </div>
      
      <div class="space-y-2">
        <label class="block text-sm font-medium text-gray-700">Photo Path</label>
        <input 
          type="text"
          name="photo" 
          placeholder="e.g. /images/myhouse.jpg"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 ease-in-out placeholder-gray-400"
          required>
        <p class="text-xs text-gray-500 mt-1">Enter the relative path to your image in the <code>public</code> folder (e.g. <code>/images/yourphoto.jpg</code>).</p>
      </div>
      
      <button 
        type="submit"
        class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold py-3 px-6 rounded-lg hover:from-blue-700 hover:to-indigo-700 transform hover:scale-105 transition duration-200 ease-in-out shadow-lg hover:shadow-xl">
        <span class="flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Home
        </span>
      </button>
    </form>
  </div>
</body>
</html>